    </div>

</div>
<!--end of jumbotron-->

<!--start of login with Harvard ID-->
<div class="container text-center">

    <!--login error banner-->
    <% if (errorCode == 1 || errorCode == 2) { %>
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong><%= errorMessage %></strong>
    </div>
    <% } %>
    <!--end of admin login error banner-->

    <form action="/harvardId/login"
          method="post"
          id="harvardIdLoginForm">

        <input type="hidden" name="openid_identifier" value="https://id.cs50.net/"/>

        <button type="submit" class="btn btn-default btn-danger btn-lg" id="harvardID">Log in with Harvard PIN</button>
    </form>
</div>
<!--end of login with Harvard ID-->

