         ng-if="allGrillStatuses.length > 0"
         class="form-group col_no_padding col-lg-4 col-md-4 col-sm-6 col-xs-12 clearfix ng-cloak">

        <div class="alert alert-success"
             ng-if="grill.grillStatus == 'open'">
