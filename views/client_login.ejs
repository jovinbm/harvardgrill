<!--start of custom student login form-->
<div class="container">
    <!--data-dv attributes for bootstrap validator plugin-->
    <form action="/infoLogin"
          method="post"
          id="studentLoginForm"
          data-bv-message="This value is not valid"
          data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
          data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
          data-bv-feedbackicons-validating="glyphicon glyphicon-refresh">

        <!--Username field-->
        <div class="form-group">
            <label for="customUsername">Name</label>
            <input type="text"
                   class="form-control"
                   id="customUsername"
                   placeholder="This will appear on your orders"
                   name="customUsername"
                   data-bv-message="The name is not valid"
                   data-bv-notempty="true"
                   data-bv-notempty-message="The name is required and cannot be empty"
                   data-bv-regexp="true"
                   data-bv-regexp-regexp="^[a-zA-Z0-9_\.]+$"
                   data-bv-regexp-message="The name can only consist of alphabetical, number, dot and underscore"
                   data-bv-stringlength="true"
                   data-bv-stringlength-min="4"
                   data-bv-stringlength-max="15"
                   data-bv-stringlength-message="The name must be at least 4 and at most 15 characters long"/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-default btn-block">SUBMIT</button>
        </div>
    </form>
</div>
<!--end of custom student login form-->

