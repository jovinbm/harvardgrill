    <section id="login">

        <!--login form-->
        <div class="container"
             ng-if="userLoginState == 'signIn'">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Sign In</h2>
                </div>
            </div>

            <div class="row">
                <div class="container text-center">
                    <div class="col-lg-12 text-center">

                        <div ng-class="bannerClass"
                             class="ng-cloak"
                             ng-if="showBanner">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            <strong>{{bannerMessage}}</strong>
                        </div>

                        <!--data-dv attributes for bootstrap validator plugin-->
                        <form name="localLoginForm"
                              id="localLoginForm">

                            <!--Username field-->
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text"
                                       class="form-control"
                                       id="username"
                                       placeholder="Enter your username here"
                                       ng-model="masterLocalLoginForm.username"
                                       ng-minlength="4"
                                       ng-maxlength="10"
                                       ng-pattern="/^[a-zA-Z0-9_]*$/"
                                       required
                                       ng-disabled="isLoading || universalDisable"
                                       name="username">
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.required">
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.minlength">
                                <small>Minimum length required is 4:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.maxlength">
                                <small>Maximum length required is 10:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.pattern">
                                <small>Only letters, numbers and underscores allowed:</small>
                            </span>
                            </div>

                            <!--password field-->
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password"
                                       name="password"
                                       class="form-control"
                                       id="password"
                                       placeholder="Enter password here"
                                       ng-model="masterLocalLoginForm.password"
                                       ng-minlength="4"
                                       ng-maxlength="20"
                                       ng-pattern="/^[a-zA-Z0-9_]*$/"
                                       required
                                       ng-disabled="isLoading || universalDisable">
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.required">
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.minlength">
                                <small>Minimum length required is 4:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.maxlength">
                                <small>Maximum length required is 20:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.pattern">
                                <small>Only letters, numbers and underscores allowed:</small>
                            </span>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-default btn-danger btn-lg btn-block"
                                        ng-disabled="localLoginForm.$invalid"
                                        ng-click="submitLocalLoginForm()">SIGN IN
                                </button>
                            </div>
                        </form>

                        <div class="section-subheading">
                            <h4>OR SIGN IN WITH</h4>
                        </div>

                        <form action="/harvardId/login"
                              method="post"
                              id="harvardIdLoginForm">

                            <input type="hidden"
                                   name="openid_identifier"
                                   value="https://id.cs50.net/"/>

                            <button type="submit"
                                    class="btn btn-default btn-danger btn-lg"
                                    id="harvardID">Harvard PIN
                            </button>
                        </form>

                        <div class="padding-top-20 padding-bottom-15">
                            New to HarvardGrill?
                        </div>

                        <a class="btn btn-danger btn-create-account"
                           href="#login"
                           du-smooth-scroll du-scrollspy
                           ng-click="changeUserLoginState('register')">CREATE AN ACCOUNT
                        </a>

                    </div>
                </div>
            </div>
        </div>
        <!--end of login form-->


        <!--registration form-->
        <div class="container"
             ng-if="userLoginState == 'register'">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading-small-20 padding-bottom-15 padding-top-20">Create an account using</h2>
                </div>
            </div>

            <div class="row">
                <div class="container text-center">

                    <form action="/harvardId/login"
                          method="post"
                          id="harvardIdLoginForm"
                          class="padding-bottom-15">

                        <input type="hidden" name="openid_identifier" value="https://id.cs50.net/"/>

                        <button type="submit" class="btn btn-default btn-danger btn-lg" id="harvardID">Harvard PIN
                        </button>
                    </form>

                    <div>
                        <h4 class="section-heading-small-20 padding-top-20">or create a new one here</h4>
                    </div>

                    <div class="col-lg-12 text-center">

                        <div class="container">

                            <div ng-class="registrationBannerClass"
                                 ng-if="showRegistrationBanner">
                                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                                <strong>{{registrationBannerMessage}}</strong>
                            </div>

                            <form name="clientRegistrationForm"
                                  id="clientRegistrationForm">

                                <!--Email field-->
                                <div class="form-group ng-cloak">
                                    <label for="email">Email</label>
                                    <input type="email"
                                           class="form-control"
                                           id="email"
                                           placeholder="username@domain.com"
                                           ng-model="registrationDetails.email"
                                           ng-pattern="/^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i"
                                           required
                                           ng-disabled="isLoading || universalDisable"
                                           name="email">
            <span class="form-error-notice" ng-show="clientRegistrationForm.email.$error.required">
                <small>This is a required field:</small>
            </span>
            <span class="form-error-notice" ng-show="adminRegistrationForm.email.$error.pattern">
                <small>This is not a valid email</small>
            </span>
                                </div>


                                <!--FirstName field-->
                                <div class="form-group ng-cloak">
                                    <label for="firstName">First name</label>
                                    <input type="text"
                                           class="form-control"
                                           id="firstName"
                                           placeholder="Jane"
                                           ng-model="registrationDetails.firstName"
                                           ng-minlength="2"
                                           ng-maxlength="30"
                                           required
                                           ng-disabled="isLoading || universalDisable"
                                           name="firstName">
            <span class="form-error-notice" ng-show="clientRegistrationForm.firstName.$error.required">
                <small>This is a required field:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.firstName.$error.minlength">
                <small>Minimum length required is 2:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.firstName.$error.maxlength">
                <small>Maximum length required is 30:</small>
            </span>
                                </div>

                                <!--LastName field-->
                                <div class="form-group ng-cloak">
                                    <label for="LastName">Last name</label>
                                    <input type="text"
                                           class="form-control"
                                           id="LastName"
                                           placeholder="Doe"
                                           ng-model="registrationDetails.lastName"
                                           ng-minlength="2"
                                           ng-maxlength="30"
                                           required
                                           ng-disabled="isLoading || universalDisable"
                                           name="lastName">
            <span class="form-error-notice" ng-show="clientRegistrationForm.lastName.$error.required">
                <small>This is a required field:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.lastName.$error.minlength">
                <small>Minimum length required is 2:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.lastName.$error.maxlength">
                <small>Maximum length required is 30:</small>
            </span>
                                </div>

                                <!--Username field-->
                                <div class="form-group ng-cloak">
                                    <label for="username">Public username</label>
                                    <input type="text"
                                           class="form-control"
                                           id="username"
                                           placeholder="JaneDoe"
                                           ng-model="registrationDetails.username"
                                           ng-minlength="4"
                                           ng-maxlength="10"
                                           ng-pattern="/^[a-zA-Z0-9_]*$/"
                                           required
                                           ng-disabled="isLoading || universalDisable"
                                           name="username">
            <span class="form-error-notice" ng-show="clientRegistrationForm.username.$error.required">
                <small>This is a required field:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.username.$error.minlength">
                <small>Minimum length required is 4:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.username.$error.maxlength">
                <small>Maximum length required is 10:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.username.$error.pattern">
                <small>Only letters, numbers and underscores allowed:</small>
            </span>
                                </div>

                                <!--password field-->
                                <div class="form-group ng-cloak">
                                    <label for="clientUpdatePassword1">New Password</label>
                                    <input type="password"
                                           name="password1"
                                           class="form-control"
                                           id="clientUpdatePassword1"
                                           placeholder=""
                                           ng-model="registrationDetails.password1"
                                           ng-minlength="4"
                                           ng-maxlength="20"
                                           ng-pattern="/^[a-zA-Z0-9_]*$/"
                                           required
                                           ng-disabled="isLoading || universalDisable">
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password1.$error.required">
                        <small>This is a required field:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password1.$error.minlength">
                        <small>Minimum length required is 4:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password1.$error.maxlength">
                        <small>Maximum length required is 20:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password1.$error.pattern">
                        <small>Only letters, numbers and underscores allowed:</small>
                    </span>
                    <span class="form-error-notice"
                          ng-show="registrationDetails.password1 != registrationDetails.password2">
                        <small>Passwords do not match:</small>
                    </span>
                                </div>

                                <!--confirm password-->
                                <div class="form-group ng-cloak">
                                    <label for="clientUpdatePassword2">Confirm Password</label>
                                    <input type="password"
                                           name="password2"
                                           class="form-control"
                                           id="clientUpdatePassword2"
                                           placeholder=""
                                           ng-model="registrationDetails.password2"
                                           ng-minlength="4"
                                           ng-maxlength="20"
                                           ng-pattern="/^[a-zA-Z0-9_]*$/"
                                           required
                                           ng-disabled="isLoading || universalDisable">
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password2.$error.required">
                        <small>This is a required field:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password2.$error.minlength">
                        <small>Minimum length required is 4:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password2.$error.maxlength">
                        <small>Maximum length required is 20:</small>
                    </span>
                    <span class="form-error-notice" ng-show="clientRegistrationForm.password2.$error.pattern">
                        <small>Only letters, numbers and underscores allowed:</small>
                    </span>
                    <span class="form-error-notice"
                          ng-show="registrationDetails.password1 != registrationDetails.password2">
                        <small>Passwords do not match:</small>
                    </span>
                                </div>

                                <!--invitation code-->
                                <div class="form-group ng-cloak">
                                    <label for="code">Invitation code</label>
                                    <input type="password"
                                           class="form-control"
                                           id="code"
                                           ng-model="registrationDetails.invitationCode"
                                           ng-minlength="4"
                                           ng-maxlength="10"
                                           ng-pattern="/^[a-zA-Z0-9_]*$/"
                                           required
                                           ng-disabled="isLoading || universalDisable"
                                           name="invitationCode">
            <span class="form-error-notice" ng-show="clientRegistrationForm.invitationCode.$error.required">
                <small>This is a required field:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.invitationCode.$error.minlength">
                <small>Minimum length required is 4:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.invitationCode.$error.maxlength">
                <small>Maximum length required is 10:</small>
            </span>
            <span class="form-error-notice" ng-show="clientRegistrationForm.invitationCode.$error.pattern">
                <small>Only letters, numbers and underscores allowed:</small>
            </span>
                                </div>

                                <div class="form-group ng-cloak">
                                    <button class="btn btn-default btn-danger btn-lg btn-block"
                                            ng-disabled="clientRegistrationForm.$invalid || isLoading || universalDisable"
                                            ng-click="createAccount()">CREATE MY ACCOUNT
                                    </button>
                                </div>

                            </form>

                            <div class="padding-top-20 padding-bottom-15">
                                Have an account?
                            </div>

                            <a class="btn btn-danger btn-create-account"
                               href="#login"
                               du-smooth-scroll du-scrollspy
                               ng-click="changeUserLoginState('signIn')">SIGN IN
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end of registration form-->
    </section>


