<section id="login">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Sign In</h2>
            </div>
        </div>

        <div class="row">
            <div class="container text-center">
                <div class="col-lg-12 text-center">

                    <form action="/harvardId/login"
                          method="post"
                          id="harvardIdLoginForm">

                        <input type="hidden" name="openid_identifier" value="https://id.cs50.net/"/>

                        <button type="submit" class="btn btn-default btn-danger btn-lg" id="harvardID">Log in with
                            Harvard
                            PIN
                        </button>
                    </form>
                    <div class="local_login_heading">
                        OR
                    </div>

                    <div ng-class="bannerClass"
                         class="ng-cloak"
                         ng-if="showBanner">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <strong>{{bannerMessage}}</strong>
                    </div>

                    <!--data-dv attributes for bootstrap validator plugin-->
                    <form name="localLoginForm"
                          id="localLoginForm">

                        <!--Username field-->
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text"
                                   class="form-control"
                                   id="username"
                                   placeholder="Enter your username here"
                                   ng-model="masterLocalLoginForm.username"
                                   ng-minlength="4"
                                   ng-maxlength="10"
                                   ng-pattern="/^[a-zA-Z0-9_]*$/"
                                   required
                                   ng-disabled="isLoading || universalDisable"
                                   name="username">
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.required">
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.minlength">
                                <small>Minimum length required is 4:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.maxlength">
                                <small>Maximum length required is 10:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.username.$error.pattern">
                                <small>Only letters, numbers and underscores allowed:</small>
                            </span>
                        </div>

                        <!--password field-->
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password"
                                   name="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Enter password here"
                                   ng-model="masterLocalLoginForm.password"
                                   ng-minlength="4"
                                   ng-maxlength="20"
                                   ng-pattern="/^[a-zA-Z0-9_]*$/"
                                   required
                                   ng-disabled="isLoading || universalDisable">
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.required">
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.minlength">
                                <small>Minimum length required is 4:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.maxlength">
                                <small>Maximum length required is 20:</small>
                            </span>
                            <span class="form-error-notice" ng-show="localLoginForm.password.$error.pattern">
                                <small>Only letters, numbers and underscores allowed:</small>
                            </span>
                        </div>

                        <div class="form-group">
                            <button type="submit"
                                    class="btn btn-default btn-danger btn-lg btn-block"
                                    ng-disabled="localLoginForm.$invalid"
                                    ng-click="submitLocalLoginForm()">SIGN IN
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


